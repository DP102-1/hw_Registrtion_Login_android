<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThreePageFragment" >

    <EditText
        android:id="@+id/etEnterNewPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:hint="@string/etEnterNewPasspord"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etConfirmNewPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/etConfirmNewPassword"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/etEnterNewPassword"
        app:layout_constraintStart_toStartOf="@+id/etEnterNewPassword"
        app:layout_constraintTop_toBottomOf="@+id/etEnterNewPassword" />

    <Button
        android:id="@+id/btGetVerificationCode"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Get Verification Code"
        app:layout_constraintStart_toStartOf="@+id/etConfirmNewPassword"
        app:layout_constraintTop_toBottomOf="@+id/etConfirmNewPassword" />

    <EditText
        android:id="@+id/etEnterConfirmationCode"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:hint="@string/etEnterConfirmationCode"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etConfirmNewPassword" />

    <Button
        android:id="@+id/btConfirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Confirm"
        app:layout_constraintEnd_toEndOf="@+id/etConfirmNewPassword"
        app:layout_constraintStart_toStartOf="@+id/etConfirmNewPassword"
        app:layout_constraintTop_toBottomOf="@+id/btGetVerificationCode" />
</androidx.constraintlayout.widget.ConstraintLayout>